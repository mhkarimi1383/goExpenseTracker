<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ .Title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  </head>
  <body class="bg-purple">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <div class="mt-5 card bg-dark bg-gradient text-light container-sm w-50 mx-auto">
      {{/* start from here */}}
      <h2 class="mt-2 mx-auto card-title">Your Balance: {{ .Amount }}$</h2>
      <table class="table table-borderless table-sm align-middle table-responsive">
        <thead class="table-dark">
          <tr>
            <th scope="col">Income</th>
            <th scope="col">Expense</th>
          </tr>
            </thead>
            <tbody>
          <tr>
            <td class="table-success">{{ .TotalIncome }}$</td>
            <td class="table-danger">{{ .TotalExpense }}$</td>
          </tr>
        </tbody>
      </table>
      <form method="post">
        <div class="form-row">
          <div class="col-auto">
            <input type="text" class="form-control mb-2" name="description" id="descriptionInput" placeholder="Description" required>
          </div>
          <div class="col-auto">
            <input type="number" class="form-control mb-2" min="0" name="amount" id="amountInput" placeholder="Amount" required>
          </div>
          <div class="col-auto">
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" name="operator" id="operatorCheck" onclick="operatorLabelChanger()">
              <label class="form-check-label" for="operatorCheck" id="operatorCheckHelp">
              </label>
            </div>
          </div>
          <div class="col-auto">
            <input type="hidden" name="action" value="CREATE" />
            <button type="submit" class="btn btn-primary mb-2">Add</button>
          </div>
        </div>
      </form>
      {{ range $item := .Items }}
      <div class="card mb-3">
        {{ if eq $item.Operator "+" }}
        <div class="card-header text-success">
          #{{ $item.Id }} Income
        </div>
        {{ end }}
        {{ if eq $item.Operator "-" }}
        <div class="card-header text-danger">
          #{{ $item.Id }} Expense
        </div>
        {{ end }}
      <div class="card-body">
        <form method="post">
          <h5 class="card-title text-dark">{{ $item.Amount }}$</h5>
          <p class="card-text text-dark">{{ $item.Description }}</p>
          <input type="hidden" name="action" value="DELETE" />
          <input type="hidden" name="id" value="{{ $item.Id }}" />
          <button type="submit" class="btn btn-danger">Remove</button>
        </form>
      </div>
    </div>
      {{ end }}
    </div>
  <script>
  window.onload = operatorLabelChanger
  function operatorLabelChanger() {
    // Get the checkbox
    var checkBox = document.getElementById("operatorCheck");
    var checkBoxHelp = document.getElementById("operatorCheckHelp");
    // If the checkbox is checked, display the output text
    if (checkBox.checked == true){
      checkBoxHelp.innerHTML = "Income";
    } else {
      checkBoxHelp.innerHTML = "Expense";
    }
  }
  </script>
  </body>
  <style>
    .card-body {
      margin: 0;
    }
    .bg-purple {
      background-color: var(--bs-purple);
      background-repeat: no-repeat;
    }
    td {
      text-align: center;
    }
  </style>
</html>
